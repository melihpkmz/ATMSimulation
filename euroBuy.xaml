                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.215"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="İşlemi Onayla" HorizontalAlignment="Left" Margin="588,393,0,0" VerticalAlignment="Top" Width="302" Height="96" Click="Button_Click" FontSize="36"/>

    </Grid>
</Window>
